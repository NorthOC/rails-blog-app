<h1>Articles</h1>

<p>There are <%= Article.public_count %> articles</p>
<%= link_to("New Article", new_article_path)%>

<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to(article.title, article) %>
        <i>(<%= article.comments.public_count %> Comments) </i>
      </li>
    <% end %>
  <% end %>

</ul>