<header>
<h1 class='intro-title'>Trip Records</h1>
</header>

<div class='container'>
<div class='flex list'>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
        <%= link_to(article, class: 'card weed') do%>
        <h5><%=article.title%></h5>
        <div class='card-desc'>
        <i class='float-left'><%= article.created_at.strftime("%Y-%m-%d %H:%M")%></i>
        <i><%= article.comments.public_count %> Comments </i>
        </div>
        <% end %>
    <% end %>
  <% end %>

</div>
</div>