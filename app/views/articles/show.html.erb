<header class="article-header">
  <h1 class='article-title'><%= @article.title %></h1>
</header>

<div class="article-container">
  <section class="article-section text-align-justify">
  <% text = @article.body.split(/[\r\n\r\n]+/) %>
  <% text.each do |par|%>
  <p><%= par %></p>
  <% end %>
  </section>
  
  <div class='text-align-right end-line'>
    <%= link_to "Edit",edit_article_path(@article),class: 'edit-destroy'%><%= link_to "Delete",article_path(@article), class: 'edit-destroy', method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>

  <div class='comment-section'>
  <%= render @article.comments %>
  </div>
  <h2>Add a comment</h2>
  
  <%= render 'comments/form' %>
</div>