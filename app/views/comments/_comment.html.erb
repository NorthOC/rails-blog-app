<% if !comment.commenter.nil? %>
  <% unless comment.archived? %>
  <div class="comment">
  
    <div class="flex-row">
      <p class='commenter'>
        <%= comment.commenter %>
      </p>
      <%= link_to '●', [comment.article, comment], class: 'comment-delete', method: :delete, data: {confirm: "Are you sure?" } %>
    </div>

    <p class='comment-body'>
      <%= comment.body %>
    </p>
  </div>
  <% end %>
<% end %>