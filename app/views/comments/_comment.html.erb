<% if !comment.commenter.nil? %>
  <% unless comment.archived? %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <%= link_to 'Delete comment', [comment.article, comment], method: :delete, data: {confirm: "Are you sure?" } %>
  <% end %>
<% end %>